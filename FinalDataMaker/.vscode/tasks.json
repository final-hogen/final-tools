{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "事前準備",
      "command": "./mytools/PreAction.ps1",
      "type": "shell",
      "detail": "ファイルの有無をチェックしたりexeを解凍したりします。",
    }
    ,{
      "label": "バイナリからJSON",
      "command": "./mytools/SerializeBin2Json.ps1",
      "type": "shell",
      "detail": "datass2.txt などのバイナリファイルをJSONに展開してカレントにぶちまけます。",
    }
    ,{
      "label": "ストーリーメーカー実行",
      "command": "./mytools/BuildAndRun.ps1",
      "args": [
        "FinalStoryMaker"
      ],
      "type": "shell",
      "detail": "ストーリーのJSONデータを作成します。",
    }
    ,{
      "label": "ぜんぶ実行",
      "type": "shell",
      "command": "echo ぜんぶ実行を完了しました。",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "silent",
        "close": false,
        "panel": "shared",
        "revealProblems": "onProblem"
      },
      "dependsOrder": "sequence",
      "dependsOn": [
          "事前準備"
          ,"バイナリからJSON"
          ,"ストーリーメーカー実行"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}